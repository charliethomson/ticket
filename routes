
// Whoami
/api/auth/me -> GET : User

// Workorders PULL
/api/workorders:
    /all?count=COUNT : GET -> Workorder[]
    /valid?count=COUNT : GET -> Workorder[] where !wo.completed
    /filter?count=COUNT : POST {
        customer_name?: string,
        phone_number?: string,
        id?: number,
        // TODO
    } -> Workorder[] where wo matches any of req.body
    /search?query=<QUERY>&count=COUNT : GET -> Workorder[] where QUERY in wo (filter but non specific)

// Workorders PUSH
/api/workorders/new: POST {
    customer: Customer,
    device: Device,
    initial_note: Note,
    initial_status: number,
}

// Items PULL
/api/items:
    /is_valid : POST {
        item: { 
            sku: number,
            id: number
        } | string
    } -> {
        ok: boolean,
        error?: string,
    }
